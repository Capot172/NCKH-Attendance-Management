<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/cus_line"
    android:id="@+id/parent">
    <TextView
        android:id="@+id/txt_seri"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/cus_avt"
        android:text="1"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textColor="@color/white_no_change"
        android:gravity="center"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txt_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23-06-2022"
            android:textColor="@color/color_detail"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:15 "
            android:textSize="14sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_data_attendance"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@null"
            android:layout_marginRight="-15dp"/>
        <ImageView
            android:id="@+id/img_dot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/img_data_attendance"
            android:background="@drawable/cus_dot_circle"
            tools:ignore="ContentDescription" />
    </RelativeLayout>


</LinearLayout>