<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/cus_background_corner_10_white"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_data"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_add_background"
        android:padding="1dp"
        android:background="@drawable/cus_background_corner_30_white_stock"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_background_corner_10_grey"
            android:text="Hủy"
            android:layout_margin="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_background_corner_10_blue"
            android:text="Đồng ý"
            android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout>