<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cus_item_class"
    android:layout_margin="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="5dp"
    android:id="@+id/parent_list_class">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <TextView
                android:id="@+id/title_list_class"
                android:padding="15dp"
                android:text="ToÃ¡n"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxEms="6"
                android:minEms="6"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/class_background"
                app:cardCornerRadius="10dp"
                android:layout_span="3">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_item_class"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

        </TableRow>


    </TableLayout>

    <ImageView
        android:id="@+id/icMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:padding="15dp"
        android:src="@drawable/ic_menu_item" />


</RelativeLayout>